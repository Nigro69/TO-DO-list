<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>todo list</title>
    <link rel="stylesheet" href="css/styles.css">
</head>
<body>
    <a href="/" class="today">Today</a>

    <div class="dropdown">
        <button onclick="myFunction()" class="dropbtn">Lists</button>
        <div class="dropdown-content">
            <%  for(var i=0;i<dropn.length;i++){ %>
                <a class="droplinks" href="/<%=dropn[i]%>"><%=dropn[i]%></a>
                <% } %>
                <form action="/createlistname" method="post">
                    <input type="text" name="newlist" class="newlistdropbox" placeholder="enter the name of new list" >
                    <button type="submit" name="listName" class="creatplus">Creat</button>
                </form>
        </div>
      </div>

    <div class="box" id="heading">
        <h1><%= day %></h1>
    </div>
    <div class="box">
          <%  for(var i=0;i<newitem.length;i++){ %>

            <form action="/delete" method="post"> 
                <div class="item">
                    <input type="checkbox" name="checkbox" value="<%=newitem[i]._id%>" onchange="this.form.submit()">

                    <p><%=newitem[i].name%></p>
                    
                </div>
                <input type="hidden" name="listName" value="<%=day%>"></input>
            </form>
            
                
           <% } %>
           <form class="item" action="/" method="post">
            <input type="text" name="newlist" placeholder="write new list item">
            <button type="submit" class="plus" name="listName" value="<%=day%>">+</button>
        </form>
    </div>
    

    
    
</body>
</html>